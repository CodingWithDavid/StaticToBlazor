
@using StaticToBlazorPart6.Models
@inject StaticToBlazorPart6.Services.PortifilioConfigurationService Service
<!-- About Section -->
<section class="page-section bg-primary text-white mb-0" id="about">
    <div class="container">

        <!-- About Section Heading -->
        <h2 class="page-section-heading text-center text-uppercase text-white">About</h2>

        <!-- Icon Divider -->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon">
                <i class="fas fa-star"></i>
            </div>
            <div class="divider-custom-line"></div>
        </div>

        <!-- About Section Content -->
        <div class="row">
            <div class="col-lg-4 ml-auto">
                <p class="lead">@model.LeftSectionMessage</p>
            </div>
            <div class="col-lg-4 mr-auto">
                <p class="lead">@model.RightSectionMessage</p>
            </div>
        </div>

        <!-- About Section Button -->
        <div class="text-center mt-4">
            <a class="btn btn-xl btn-outline-light" href="@model.LinkToOtherResources" target="_blank">
                <i class="fas fa-download mr-2"></i>
                @model.LinkName
            </a>
        </div>

    </div>
</section>

@code {
    AboutModel model = new AboutModel();

    protected override async Task OnInitializedAsync()
    {
        model = await Service.GetAbout();
    }
}
